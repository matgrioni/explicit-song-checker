{
    "manifest_version": 2,
    "name": "Explicitr",
    "version": "1.1",

    "description": "Party DJ's can accurately check if a song is explicit or not using lyrics found on azlyrics.com.",

    "icons": {
        "16":  "images/icon16.png",
        "48":  "images/icon48.png",
        "128": "images/icon128.png"
    },

    "browser_action": {
        "default_icon": {
            "16":  "images/icon16.png",
            "48":  "images/icon48.png",
            "128": "images/icon128.png"
        },
        "default_title": "Check song lyrics",
        "default_popup": "popup.html"
    },

    "permissions": [
        "http://*.azlyrics.com/lyrics/*"
    ]
}
